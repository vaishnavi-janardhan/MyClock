<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">@color/colorMenuBackground</item>
        <item name="android:itemTextAppearance">@style/menuTextAppearance</item>
    </style>
    <style name="tab_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_ten</item>
    </style>

    <style name="menuTextAppearance" parent="TextAppearance.AppCompat.Widget.PopupMenu.Header">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
